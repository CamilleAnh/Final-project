<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/app_bg"
    android:gravity="center_vertical"
    android:padding="16dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            >

            <TextView
                android:id="@+id/textViewQuestionSetName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Tên Bộ Câu Hỏi:"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewQuestionNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Câu Hỏi Thứ :"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="23dp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etQuestionToEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Câu hỏi" />

            </com.google.android.material.textfield.TextInputLayout>

            <EditText
                android:id="@+id/etOption1ToEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Lựa chọn 1" />

            <EditText
                android:id="@+id/etOption2ToEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Lựa chọn 2" />

            <EditText
                android:id="@+id/etOption3ToEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Lựa chọn 3" />

            <EditText
                android:id="@+id/etOption4ToEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Lựa chọn 4" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etCorrectAnswerToEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Câu trả lời đúng " />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnSaveEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lưu Chỉnh Sửa" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
